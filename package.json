{
  "name": "@well-architectured-tools/well-architectured-framework",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "prettier": "@well-architectured-tools/prettier-config",
  "scripts": {
    "develop": "nodemon",
    "predevelop": "npm run infra:up",
    "postdevelop": "npm run infra:down",
    "clear": "rm -rf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "assets": "cp -r assets/. dist/server/",
    "start": "node --inspect dist/server/index.js",
    "format:check": "prettier ./src --check",
    "format:write": "prettier ./src --write",
    "lint:check": "eslint ./src",
    "lint:write": "eslint ./src --fix",
    "lint:inspect-config": "eslint --inspect-config",
    "unit-tests": "vitest --config ./vitest.config.ts --project unit-tests",
    "infra-tests": "vitest --config ./vitest.config.ts --project infra-tests",
    "infra:up": "docker compose -f infra/compose.yaml up -d",
    "infra:down": "docker compose -f infra/compose.yaml down",
    "migrations:create": "node-pg-migrate --config-file=migrations/postgres/config.json create migration",
    "migrations:up-all": "node-pg-migrate --config-file=migrations/postgres/config.json up",
    "migrations:down-one": "node-pg-migrate --config-file=migrations/postgres/config.json down",
    "prepare": "ts-patch install"
  },
  "dependencies": {
    "@fastify/static": "^9.0.0",
    "@novadi/core": "^0.6.0",
    "dotenv-safe": "^9.1.0",
    "fastify": "^5.7.4",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "typia": "^11.0.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tsconfig/node-ts": "^23.6.2",
    "@tsconfig/node24": "^24.0.3",
    "@tsconfig/strictest": "^2.0.8",
    "@types/dotenv-safe": "^9.1.0",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@well-architectured-tools/prettier-config": "^1.0.1",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "node-pg-migrate": "^8.0.4",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-patch": "^3.3.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  }
}
